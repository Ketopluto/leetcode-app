{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/refresh-stats",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/weekly-reports",
      "schedule": "0 8 * * 1"
    }
  ]
}